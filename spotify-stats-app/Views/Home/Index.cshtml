@{
    ViewBag.Title = "Home";
}

<div class="main-card">
    <h1>Welcome!</h1>
    <div class="mb-3">
        <div class="card">
            <div class="card-body">
                <label for="formFile" class="form-label">Input your streaming history files here:</label>
                <input class="form-control" type="file" id="formFile" accept="json" multiple>
                <div class="mt-4 d-flex justify-content-end gap-2">
                    <button class="btn btn-outline-white">Tutorial</button>
                    <a class="btn btn-green" asp-controller="Stats" asp-action="LoadStreamFiles">Load Data</a>
                </div>
            </div>
        </div>
    </div>
</div>